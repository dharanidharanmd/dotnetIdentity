@page
@model dotnetIdentity.Pages.Account.LoginModel
@{
}
<div class = "container border" style="padding:40px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row" style="padding:4px">
            <div class=" col-2">
                <label asp-for="credential.UserName"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="credential.UserName" />
            </div>
            <span class="text-danger" asp-validation-for=credential.UserName></span>
        </div>
        <div class="form-group row" style="padding:4px">
            <div class=" col-2">
                <label asp-for="credential.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" class="form-control" asp-for="credential.Password" />
            </div>
            <span class="text-danger" asp-validation-for=credential.UserName></span>
        </div>
        <div class="form-group row" style="padding:4px">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login"/>
            </div>
            <div class="col-5">
                
            </div>
        </div>
    </form>
</div>
